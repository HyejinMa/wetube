extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username",type="text", required)
        input(placeholder="Password", name="password",type="password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=a1e46058be3dee4b1c54&allow_signup=false&scope=user:email") Continue with Github &rarr;
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create one now &rarr;